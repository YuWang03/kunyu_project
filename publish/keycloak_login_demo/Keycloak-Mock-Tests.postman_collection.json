{
  "info": {
    "name": "Keycloak OIDC API Tests (Mock)",
    "description": "測試 Keycloak OIDC 整合 - 使用 Mock Token",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://localhost:7001",
      "type": "string"
    },
    {
      "key": "keycloak_url",
      "value": "https://sso.panpi.com.cn",
      "type": "string"
    },
    {
      "key": "realm",
      "value": "Panpi_TP",
      "type": "string"
    },
    {
      "key": "client_id",
      "value": "ZZ_EMPLOYEE2k7",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "mock_token",
      "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3OC0xMjM0LTEyMzQtMTIzNC0xMjM0NTY3ODkwMTIiLCJlbWFpbCI6InRlc3QudXNlckBjb21wYW55LmNvbSIsInByZWZlcnJlZF91c2VybmFtZSI6InRlc3QudXNlciIsIm5hbWUiOiLmrKzoqbjnlKjmiLgiLCJpYXQiOjE3MzA3MzI0MDAsImV4cCI6OTk5OTk5OTk5OX0.mock-signature",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. 測試 Keycloak 連線",
      "item": [
        {
          "name": "測試 Token Endpoint (錯誤憑證)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "password",
                  "type": "text"
                },
                {
                  "key": "client_id",
                  "value": "{{client_id}}",
                  "type": "text"
                },
                {
                  "key": "username",
                  "value": "fake@test.com",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "wrongpassword",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{keycloak_url}}/realms/{{realm}}/protocol/openid-connect/token",
              "host": ["{{keycloak_url}}"],
              "path": ["realms", "{{realm}}", "protocol", "openid-connect", "token"]
            },
            "description": "預期收到 401 錯誤，證明端點正常運作"
          },
          "response": []
        },
        {
          "name": "獲取 Realm 公鑰",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{keycloak_url}}/realms/{{realm}}",
              "host": ["{{keycloak_url}}"],
              "path": ["realms", "{{realm}}"]
            },
            "description": "獲取 Realm 的公開資訊，包含 public_key"
          },
          "response": []
        }
      ],
      "description": "測試 Keycloak 基本連線和端點可用性"
    },
    {
      "name": "2. 使用 Mock Token 測試 API",
      "item": [
        {
          "name": "測試 API Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/health",
              "host": ["{{base_url}}"],
              "path": ["api", "health"]
            },
            "description": "測試 API 基本連線"
          },
          "response": []
        },
        {
          "name": "測試受保護的 API (Mock Token)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{mock_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/BasicInformation/GetEmployeeBasicInfo",
              "host": ["{{base_url}}"],
              "path": ["api", "BasicInformation", "GetEmployeeBasicInfo"]
            },
            "description": "使用 Mock Token 測試受保護的 API"
          },
          "response": []
        },
        {
          "name": "測試請假 API (Mock Token)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{mock_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/LeaveForm/GetLeaveRecords",
              "host": ["{{base_url}}"],
              "path": ["api", "LeaveForm", "GetLeaveRecords"]
            }
          },
          "response": []
        }
      ],
      "description": "使用 Mock Token 測試各種 API 端點"
    },
    {
      "name": "3. 真實登入測試 (需要帳號)",
      "item": [
        {
          "name": "登入取得 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.access_token);",
                  "    console.log('Access Token:', jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "password",
                  "type": "text"
                },
                {
                  "key": "client_id",
                  "value": "{{client_id}}",
                  "type": "text"
                },
                {
                  "key": "username",
                  "value": "YOUR_EMAIL@company.com",
                  "type": "text",
                  "description": "替換為真實的公司信箱"
                },
                {
                  "key": "password",
                  "value": "YOUR_PASSWORD",
                  "type": "text",
                  "description": "替換為真實密碼"
                }
              ]
            },
            "url": {
              "raw": "{{keycloak_url}}/realms/{{realm}}/protocol/openid-connect/token",
              "host": ["{{keycloak_url}}"],
              "path": ["realms", "{{realm}}", "protocol", "openid-connect", "token"]
            },
            "description": "⚠️ 需要真實帳號密碼"
          },
          "response": []
        },
        {
          "name": "使用真實 Token 測試 API",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/BasicInformation/GetEmployeeBasicInfo",
              "host": ["{{base_url}}"],
              "path": ["api", "BasicInformation", "GetEmployeeBasicInfo"]
            },
            "description": "使用真實 Token 測試 API"
          },
          "response": []
        }
      ],
      "description": "需要真實帳號密碼才能執行"
    }
  ]
}
